<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:NervaWalletMiner.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="550"
			 x:DataType="vm:SettingsViewModel"
             x:Class="NervaWalletMiner.Views.SettingsView">

	<Design.DataContext>
		<vm:SettingsViewModel />
	</Design.DataContext>
	
	<StackPanel Spacing="5">
		<Grid ColumnDefinitions="24,*">
			<Image Grid.Row="0" Grid.Column="0" Source="{Binding CoinIcon}"></Image>
			<Label Grid.Row="0" Grid.Column="1" Height="24">Settings</Label>
		</Grid>
		
		<Button Command="{Binding OpenDebugFolderCommand}"
			HorizontalAlignment="Center"
			VerticalAlignment="Top">
			Debug Folder
		</Button>
		<Label Content="Mining Address:" />
		<TextBox Name="tbxMiningAddress" />
		<Button Name="btnSaveSettings"
				Content="Save Settings"
				Click="SaveSettingsClicked"/>
		
	</StackPanel>
</UserControl>
