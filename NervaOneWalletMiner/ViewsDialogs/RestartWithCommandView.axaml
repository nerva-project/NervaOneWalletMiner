<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="150"
        x:Class="NervaOneWalletMiner.ViewsDialogs.RestartWithCommandView"
		Width="500"
		Height="150"
		Topmost="True"
		WindowStartupLocation="CenterOwner"
        Title="Restart With Command">
	
	<StackPanel Spacing="5" Margin="10">
		<Label Content="Additional Restart Options"/>
		<TextBox Name="tbxRestartOptions"
				 Watermark="Example: --pop-blocks 10000"/>		

		<DockPanel Margin="0,15,0,0">
			<Button Name="btnOk"
					Content="OK"
					Click="OkButtonClicked"
					IsDefault="True"/>

			<Button Name="btnCancel"
					Content="Cancel"
					Click="CancelButtonClicked"
					Margin="10,0,0,0"/>
		</DockPanel>
	</StackPanel>
	
</Window>
