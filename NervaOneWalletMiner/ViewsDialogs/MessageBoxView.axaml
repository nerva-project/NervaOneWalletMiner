<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="150"
        x:Class="NervaOneWalletMiner.ViewsDialogs.MessageBoxView"
		Width="500"
		Height="150"
		Topmost="True"
		WindowStartupLocation="CenterOwner"
		Icon="/Assets/nerva-logo.ico"  
        Title="Message Box">
	
	<StackPanel Spacing="5" Margin="10">
		<TextBlock Name="tbkMessage"
				   TextWrapping="WrapWithOverflow"
				   Text="Message"
				   Margin="0 5" />

		<DockPanel Margin="0,15,0,0">
			<Button Name="btnOk"
					Content="OK"
					Click="OkButton_Clicked"
					IsDefault="True"/>

			<Button Name="btnCancel"
					Content="Cancel"
					Click="CancelButton_Clicked"
					Margin="10,0,0,0"/>
		</DockPanel>
	</StackPanel>
	
</Window>
